CC="gcc"
CXX="g++"
LD="ld.bfd"
AR="${CHOST}-ar"
AS="${CHOST}-as"
CPP="${CHOST}-cpp"
NM="${CHOST}-nm"
STRIP="${CHOST}-strip"
RANLIB="${CHOST}-ranlib"
OBJCOPY="${CHOST}-objcopy"
STRINGS="${CHOST}-strings"
OBJDUMP="${CHOST}-objdump"
READELF="${CHOST}-readelf"

COMMON_FLAGS="-march=native -O3 -pipe -flto=auto -fuse-linker-plugin"
CFLAGS="${COMMON_FLAGS}"
CXXFLAGS="${COMMON_FLAGS}"
FCFLAGS="${COMMON_FLAGS}"
FFLAGS="${COMMON_FLAGS}"
LDFLAGS="-fuse-ld=bfd -Wl,-O1 -Wl,--as-needed -Wl,-z,pack-relative-relocs"

USE="${USE} -clang -llvm-libunwind"
